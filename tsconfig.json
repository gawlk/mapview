{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "types": [
      "vite/client",
      "vitest",
      "@intlify/unplugin-vue-i18n/messages",
      "unplugin-icons/types/vue",
      "vite-svg-loader",
      "geojson",
      "@types/mapbox-gl",
      "mathjs",
      "fflate",
      "vue"
    ],
    "paths": {
      "/src/*": ["src/*"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
